<header class='header'>
  <div class='search-bar-contents'>
    <%= link_to 'Shoppers', "/", class: 'shoppers-icon' %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='何をお探しですか？'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='right-contents'>
    <ul class='lists-left'></ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.name, "#", class: "user-name" %></li>
        <% if current_user.admin? %>
          <%= link_to '出品する', new_admin_item_path, class: 'listing-btn' %>
        <% end %>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '会員登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>