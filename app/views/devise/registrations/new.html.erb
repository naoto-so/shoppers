<h2>会員登録</h2><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 買物 太郎", maxlength:"20" %>
  </div><br>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">フリガナ</label>
    </div>
    <%= f.text_field :kana, class:"input-default", id:"kana", placeholder:"例) カイモノ タロウ", maxlength:"20" %>
  </div><br>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"emai;", placeholder:"PC・ケータイどちらでも可", maxlength:"40" %>
  </div><br>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
    </div>
    <%= f.telephone_field :tel, class:"input-default", id:"tel;", placeholder:"例) 09011112222" %>
  </div><br>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", maxlength:"40" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div><br>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい", maxlength:"40" %>
  </div><br>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %><br>

<%= link_to 'トップページへ戻る', "/" %>
