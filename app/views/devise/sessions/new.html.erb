<h2>ログイン</h2><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"emai;", placeholder:"PC・ケータイどちらでも可", maxlength:"40" %>
  </div><br>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div><br>


  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %><br>

<%= link_to 'トップページ', "/" %>