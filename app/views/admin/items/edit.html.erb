<h1>【編集画面】</h1>
<div class="edit-form">
  <%= form_with(model: [ :admin, @item ], local: true) do |form| %>
    <div class="item-image">
      <%= form.file_field :image, class:"item-image" %>
    </div>
    <div class="item-name">
      <%= form.text_field :item, placeholder: "商品名" %>
    </div>
    <div class="item-explain">
      <%= form.text_area :explain, placeholder: "説明", rows: "20" %>
    </div>
    <div class="item-price">
      <%= form.text_field :price, placeholder: "参考価格" %>
    </div>
    <div class="send-btn">
      <%= form.submit "更新" %>
    </div>
  <% end %>
</div>
<div class="back">
  <br><%= link_to '詳細画面へ戻る', item_path(@item.id) %>
</div>
<div class="top">
  <%= link_to 'トップページへ戻る', "/" %>
</div>