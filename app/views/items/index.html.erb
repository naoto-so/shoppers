<%= render "shared/header" %>
<h1 class="title-set">セット商品</h1>
<div class="set-contents">
  <% @items.each do |item| %>
    <li class='set-list'>
      <%= link_to item_path(item.id) do %>
        <div class="list-image">
          <%= image_tag item.image.variant(resize: '270x270') %>
        </div>
        <div class="list-item">
          <%= item.item %>
        </div>
      <% end %>
    </li>
  <% end %>
</div>